{{#if responseMessage}}
<div class="alert alert-success">
    {{responseMessage}}
</div>
{{/if}}
<form>
  <div class="form-group">
    <label for="email">Email address</label>
    {{input value=emailAddress type="email" class="form-control" id="email" placeholder="Email"}}
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}  </div>

  <button type="submit" class="btn btn-default" disabled={{isDisabled}} {{action 'sendContact'}}>Submit</button>
</form>
